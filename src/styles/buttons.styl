.button
	background: $color-gray-dark
	border-radius: 5px
	border: $color-gray-dark
	color: white
	cursor: pointer
	display: inline-block
	font-size: 14px
	font-weight: 100
	height: 40px
	letter-spacing: 1px
	outline: none !important
	padding: 0 20px
	transition: 0.3s all


	&:disabled
		opacity: 0.3
		cursor: default


	&.block
		width: 100%


	&.outline
		background: transparent
		color: $color-gray-dark
		border: 1px solid $color-gray-dark

	&:hover
		background: $color-gray-dark
		color: white
		border: 1px solid $color-gray-dark


	&.primary
		background: $color-primary


		&.outline
			background: transparent
			color: $color-primary
			border: 1px solid $color-primary


		&:hover
			background: $color-primary
			color: white
			border: 1px solid $color-primary
