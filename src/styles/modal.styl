body


	app-root
		transition: 0.5s all


	&.modal-open
		app-root
			display: block
			filter: blur(5px)


.modal
	align-items: center
	display: flex !important
	justify-content: center
	overflow: hidden

	.modal-dialog


		.modal-content
			overflow: hidden


			.modal-header
				justify-content: center
				position: relative
				border: 0


				&:before
					border-top: 1px solid $color-primary
					content: ''
					left: 20px
					position: absolute
					right: 20px


				.modal-title
					background: white
					padding: 0 10px
					z-index: 1


			.modal-footer
				border: 0


	&.animation
		.modal-dialog
			animation-direction: normal
			animation-duration: 0.5s
			animation-fill-mode: forwards
			animation-name: slidein




@keyframes slidein

	from
		transform: scale(0.5)

	to
		transform: scale(1)

