input
textarea
	background: white
	border-radius: 5px
	border: 1px solid #e5edef
	color: $color-gray-letter
	font-size: 14px
	font-weight: 100
	height: 40px
	letter-spacing: 1px
	margin: 5px 0
	outline: none
	padding: 8px 12px
	transition: 0.3s all
	width: 100%

textarea
	height: auto
	resize: none


.form-group
	label
		font-weight: bold
		margin: 0
	input
	textarea
		margin: 0
		z-index: 10
